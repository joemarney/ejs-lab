<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= name %></title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <h1><%= name %></h1>
    <% menu.forEach(item => { %>
    <p>
      <strong><%= item.name %></strong> $<%= item.price %> <%= item.rating === 5
      ? "⭐" : ''%>
    </p>
    <p>Rating: <%= item.rating %></p>
    <%= item.details %> <% }) %>
  </body>
</html>
